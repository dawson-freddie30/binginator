<Window x:Class="Binginator.Windows.MsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Binginator"
        Width="300"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        Topmost="True">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Name="TextMessage" TextWrapping="Wrap" Text="TextBlock"/>

        <DockPanel Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Close" Width="75" IsCancel="True" IsDefault="True" Click="Button_Click" HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</Window>
